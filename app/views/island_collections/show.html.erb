<p id="notice"><%= notice %></p>

<section class="title">
  <h1><%= @island_collection.title %></h1>
  <p class="collection-count">24 / 72 collected</p>
</section>

<section class="collection-items">
  <% @collectibles.each do |collectible| %>
    <div class="collectible" id="<%= collectible.id %>">
      <%= link_to collectible_toggle_path(collectible), :data => {:remote => true, :method => :patch} do %>
        <% unless collectible.thumbnail == nil%>
          <%= image_tag collectible.thumbnail, height: '100', width: '100' %>
        <% end %>
      <% end %>
      <p><%= link_to collectible.name, collectible %></p>
      <p><%= check_box_tag "Complete", collectible.complete, collectible.complete, :data => {:remote => true, :url => url_for(collectible_toggle_path(collectible)), :method => :patch  } %>
      <input type="checkbox" name="task" id="task" value="1" data-url="/tasks/1" data-remote="true" data-method="post">
</p>
    </div>
  <% end %>
</section>

<div class="modal">
</div>

<%= link_to 'Edit', edit_island_collection_path(@island_collection) %> |
<%= link_to 'Back', island_collections_path %>
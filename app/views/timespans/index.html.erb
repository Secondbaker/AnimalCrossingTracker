<p id="notice"><%= notice %></p>

<h1>Timespans</h1>

<table>
  <thead>
    <tr>
      <th>Start</th>
      <th>End</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @timespans.each do |timespan| %>
      <tr>
        <td><%= timespan.start %></td>
        <td><%= timespan.end %></td>
        <td><%= link_to 'Show', timespan %></td>
        <td><%= link_to 'Edit', edit_timespan_path(timespan) %></td>
        <td><%= link_to 'Destroy', timespan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Timespan', new_timespan_path %>
